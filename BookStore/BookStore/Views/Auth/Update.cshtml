<link rel="stylesheet" href="~/Css/login.css">
@model UserUpdateVM
<!-- protected page txt start -->
<div class="bg-blue">
    <div class="nav container d-flex">
        <h1 class="unique-text">Protected Page</h1>
        <p class="gray w-400">
            There are many variations of passages of Lorem Ipsum available, have
            suffered alteration in some form.
        </p>
    </div>
</div>
<!-- protected page txt end -->
<!-- Login start -->
<div class="login-container d-flex center">
    <div class="bg-light-gray d-flex f-dir-column">
        <div class="col-md-6 col-md-offset-3 text-center">
            <div class="login">
                <div class="blue protected-form-heading">
                    <div class="login-text">
                        <h2 class="blue center">Update</h2>
                        <span class="gray">You can update your details</span>
                    </div>
                    <div class="login-form">
                        <div style="color:deeppink" asp-validation-summary="ModelOnly"></div>
                        <form method="post">
                            <div style="color:black">
                                <label asp-for="FirstName"></label>
                                <input type="text" asp-for="FirstName">
                            </div>
                            <span style="color:deeppink" asp-validation-for="FirstName"></span>

                            <div style="color:black">
                                <label asp-for="LastName"></label>
                                <input type="text" asp-for="LastName">
                            </div>
                            <span style="color:deeppink" asp-validation-for="LastName"></span>

                            <div style="color:black">
                                <label asp-for="UserName"></label>
                                <input type="text" asp-for="UserName">
                            </div>
                            <span style="color:deeppink" asp-validation-for="UserName"></span>

                            <div style="color:black">
                                <label asp-for="Email"></label>
                                <input type="email" asp-for="Email">
                            </div>
                            <span style="color:deeppink" asp-validation-for="Email"></span>

                            <div style="color:black">
                                <label asp-for="CurrentPassword"></label>
                                <input type="password" asp-for="CurrentPassword">
                            </div>
                            <span style="color:deeppink" asp-validation-for="CurrentPassword"></span>

                            <div style="color:black">
                                <label asp-for="NewPassword"></label>
                                <input type="password" asp-for="NewPassword">
                            </div>
                            <span style="color:deeppink" asp-validation-for="NewPassword"></span>

                            <div style="color:black">
                                <label asp-for="ConfirmPassword"></label>
                                <input type="password" asp-for="ConfirmPassword">
                            </div>
                            <span style="color:deeppink" asp-validation-for="ConfirmPassword"></span>

                            <div class="button-box" style="color:black">
                                <button type="submit" class="default-btn">Update</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>