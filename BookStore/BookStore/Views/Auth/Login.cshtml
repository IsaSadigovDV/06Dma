<link rel="stylesheet" href="~/Css/login.css">
@model LoginVM
<!-- protected page txt start -->
<div class="bg-blue">
    <div class="nav container d-flex">
        <h1 class="unique-text">Protected Page</h1>
        <p class="gray w-400">
            There are many variations of passages of Lorem Ipsum available, have
            suffered alteration in some form.
        </p>
    </div>
</div>
<!-- protected page txt end -->
<!-- Login start -->
<div class="login-container d-flex center">
    <div class="bg-light-gray d-flex f-dir-column">
        <div class="col-md-6 col-md-offset-3 text-center">
            <div class="login">
                <div class="blue protected-form-heading">
                    <div class="login-text">
                        <h2 class="blue center">Login</h2>
                        <span class="gray">Please login using account detail bellow.</span>
                    </div>
                    <div class="login-form">
                        <div style="color:deeppink" asp-validation-summary="ModelOnly"></div>
                        <form method="post">
                            <div style="color:black">
                                <label asp-for="UserName"></label>
                                <input type="text" asp-for="UserName">
                            </div>
                            <span style="color:deeppink" asp-validation-for="UserName"></span>

                            <div style="color:black">
                                <label asp-for="Password"></label>
                                <input type="password" asp-for="Password">
                            </div>
                            <span style="color:deeppink" asp-validation-for="Password"></span>

                            <div class="button-box" style="color:black">
                                <div class="login-toggle-btn">
                                    <input type="checkbox" asp-for="RememberMe">
                                    <label class="gray" for="remember">Remember me</label>
                                </div>
                                <button type="submit" class="default-btn">Login</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>