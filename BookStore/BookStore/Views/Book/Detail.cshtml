@model Book
<link rel="stylesheet" href="~/Css/singleproduct.css" />
<!-- my store section start -->
<div class="bg-blue">
    <div class="nav container d-flex">
        <h1 class="unique-text">My Store</h1>
        <p class="gray w-400">
            There are many variations of passages of Lorem Ipsum available, have
            suffered alteration in some form.
        </p>
    </div>
</div>
<!-- my store section end -->
<!-- single book start -->
<section class="d-flex single-book center">
    <div class="single-book-container bg-light-blue">
        <img src="~/assets/img/book/@Model.Image" alt="" />
    </div>
    <div class="single-book-description d-flex f-dir-column">
        <h2 class="blue">@Model.Name</h2>
        <h2 class="yellow">$@Model.Price USD</h2>
        <p class="gray">
           @Model.Description
        </p>

        <div>
            <ul class="gray pad-left-0">
                <li>
                    <span class="detailTitle"><a class="gray" href="">Publisher</a></span>
                    <span class="detailDot">:</span>
                    <span>
                        <a href="" class="gray">@Model.Publisher</a>
                    </span>
                </li>

                <li>
                    <span class="detailTitle"><a class="gray" href="">Language</a></span>
                    <span class="detailDot">:</span>
                    @foreach (var item in Model.BookLanguages.Take(3))
                    {
                        <span><a class="gray" href="">@item.Language.Name</a></span>
                    }
                </li>

                <li>
                    <span class="detailTitle"><a href="" class="gray">Paperback</a></span>
                    <span class="detailDot">:</span>
                    <span><a class="gray" href="">@Model.PaperCount</a> pages</span>
                </li>

                <li>
                    <span class="detailTitle"><a class="gray" href="">Category</a></span>
                    <span class="detailDot">:</span>
                    @foreach (var item in Model.BookCategories.Take(3))
                    {
                        <a href="" class="gray">@item.Category.Name</a>

                    }
                </li>

                <li>
                    <span class="detailTitle"><a href="" class="gray">Dimensions</a></span>
                    <span class="detailDot">:</span>
                    <span><a class="gray" href="">@Model.Dimensions cm</a></span>
                </li>
            </ul>
        </div>
        <div class="single-book-buttons d-flex">
            <input type="number" class="btn-no-bg" value="@Model.Quantity" min="0" />
            <button class="btn wide-btn" id="addToCartButton">
                <i class="fa-solid fa-cart-shopping"></i> Add to Cart
            </button>
        </div>
    </div>
</section>
<!-- single book end -->
<!-- product description buttons start -->
<div class="product-btn-container container d-flex center">
    <button class="btn-bg-blue">PRODUCT DESCRIPTION</button>
    <button class="btn-bg-light-blue">ADDITIONAL INFO</button>
</div>
<!-- product description buttons end -->
